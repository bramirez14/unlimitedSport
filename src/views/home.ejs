<h4>COMPRAR POR MARCA</h4>

<div class="owl-carousel owl-theme">
  <% categorias.forEach(categoria => { %>
    <div class="item"><img src="/images/products/marcas/<%= categoria.image %> " alt=""></div>
 <% }); %> 

</div>

<!-- Lo mas vendidos -->
<h4> MAS VENDIDOS</h4>
<div class="owl-carousel owl-theme">
  <% arrayProducts.forEach(product => { %>
  <% if(product.discount ==='0'){ %>
  <div class='art'>
    <a href="/products"><img src="/images/products/<%= product.image %> " alt="">
      <h5 class="card-marca"> <%= product.marca %> </h5>
      <h6 class="card-name"> <%= product.name %> </h6>
      <h6 class="card-price"> $<%= product.price %> </h6>
    </a>
  </div>
  <% } %>
  <% }); %>
</div>

<!-- Lanzamiento -->
<h4> OFERTAS </h4>
<div class="owl-carousel owl-theme">
  <% arrayProducts.forEach(product => { %>
  <% if(product.discount >0){ %>
  <div class='art'>
    <a href="/products"><img src="/images/products/<%= product.image %> " alt="">
      <h5 class="card-marca"> <%= product.marca %> </h5>
      <h6 class="card-name"> <%= product.name %> </h6>
      <h6 class="card-price"> $<%= product.price %> </h6>
    </a>
  </div>
  <% } %>
  <% }); %>
</div>

