      <img src="/images/products/imagen-slide/zapatillas-nike-zoom.jpg" class="d-block w-100" alt="Nike">
    </div>
    <div class="carousel-item">
      <img src="/images/products/imagen-slide/ahora12-cuotas-diciembre-2019-1600x300.jpg" class="d-block w-100" alt="Ahora-2">
    </div>
    <div class="carousel-item">
      <img src="/images/products/imagen-slide/AdidasSL20.png" class="d-block w-100" alt="Adidas">
    </div>
  </div>
  <div class="carousel-item">
    <img src="/images/products/imagen-slide/PUMA-Mercedes-web-1600x300.jpg" class="d-block w-100" alt="puma-mercedes">
  </div>
  <div class="carousel-item">
    <img src="/public/images/products/imagen-slide/superofertas.jpg" class="d-block w-100" alt="Super-ofertas">
  </div>
  <div class="carousel-item">
    <img src="/images/products/imagen-slide/ofertas_y_envio_web_-_quedate.png" class="d-block w-100" alt="quedate-en-casa">
  </div>
  <!-- flechas -->
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
